# PostgreSQL MCP Server - Development Environment

# Database Configuration
DATABASE_URL=postgresql://mcpuser:mcppass@localhost:5432/mcptest

# Server Configuration
SERVER_PORT=3000
LOG_LEVEL=debug

# Home Assistant Authentication Configuration
# Set these to test real Home Assistant authentication
HA_BASE_URL=http://localhost:8123
HA_TEST_TOKEN=your-home-assistant-long-lived-access-token-here

# User Access Control (Development Mode)
ALLOWED_USERS=admin,testuser,developer
ENABLE_WRITE_OPERATIONS=true
MAX_CONNECTIONS=5

# Development Configuration
NODE_ENV=development

