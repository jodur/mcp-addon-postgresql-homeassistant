# PostgreSQL MCP Server Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://mcpuser:mcppassword@localhost:5432/mcpdb

# Server Configuration
SERVER_PORT=3000
LOG_LEVEL=info

# Service Authentication Configuration
# For MCP servers, authentication is service-based, not user-based
ENABLE_WRITE_OPERATIONS=true
MAX_CONNECTIONS=10

# Home Assistant Configuration
HA_BASE_URL=http://supervisor/core
SUPERVISOR_TOKEN=your-ha-token-here

# Development Configuration
NODE_ENV=production
